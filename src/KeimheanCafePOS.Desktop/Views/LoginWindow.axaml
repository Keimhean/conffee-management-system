<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:KeimheanCafePOS.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="750"
        x:Class="KeimheanCafePOS.Desktop.Views.LoginWindow"
        x:DataType="vm:LoginViewModel"
        Title="KEIMHEAN Cafe - Login"
        Width="600" Height="750"
        MinWidth="500" MinHeight="650"
        WindowStartupLocation="CenterScreen"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        CanResize="False">

    <Window.Styles>
        <!-- Glassmorphic Card Style -->
        <Style Selector="Border.glass-card">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="32"/>
        </Style>

        <!-- Login Button Style -->
        <Style Selector="Button.login-btn">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                        <GradientStop Color="#FDB44B" Offset="0"/>
                        <GradientStop Color="#F59E0B" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="0,18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Transitions">
                    <Transitions>
                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                    </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.login-btn:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.02)"/>
        </Style>

        <Style Selector="Button.login-btn:disabled">
            <Setter Property="Opacity" Value="0.5"/>
        </Style>

        <!-- Role Button Style -->
        <Style Selector="Button.role-btn">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#000000" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24,20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button.role-btn:pointerover">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.9"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
        </Style>

        <Style Selector="Button.role-btn-selected">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#F59E0B" Offset="0"/>
                        <GradientStop Color="#F97316" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="0"/>
            
        </Style>

        <!-- Input Style -->
        <Style Selector="TextBox.glass-input">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="TextBox.glass-input:focus">
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Password Box Style -->
        <Style Selector="TextBox.password-input">
            <Setter Property="PasswordChar" Value="●"/>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="TextBox.password-input:focus">
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#FFFFFF" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Error Message Style -->
        <Style Selector="Border.error-message">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#FEE2E2" Opacity="0.9"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#EF4444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
    </Window.Styles>

    <!-- Main Background with Gradient -->
    <Panel>
        <!-- Vibrant Gradient Background -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                    <GradientStop Color="#EC4899" Offset="0"/>
                    <GradientStop Color="#8B5CF6" Offset="0.5"/>
                    <GradientStop Color="#6366F1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Login Card -->
        <Border Classes="glass-card" 
                Margin="80,100,80,100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="450"
                MaxHeight="650">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40" Spacing="28">
                    
                    <!-- Title -->
                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                        <TextBlock Text="Login" 
                                   FontSize="48" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Login Form -->
                    <StackPanel Spacing="20">
                        <TextBlock Text="Username or e-mail" 
                                   FontSize="13"
                                   Foreground="White"
                                   Opacity="0.8"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Username Input -->
                        <StackPanel Spacing="8">
                            <TextBox Classes="glass-input"
                                     Text="{Binding Username, Mode=TwoWay}"
                                     Watermark="Enter your username"
                                     Name="UsernameTextBox"/>
                        </StackPanel>

                        <!-- Password Input -->
                        <StackPanel Spacing="8">
                            <TextBox Classes="password-input"
                                     Text="{Binding Password, Mode=TwoWay}"
                                     Watermark="Enter your password"
                                     Name="PasswordTextBox"
                                     PasswordChar="●"/>
                        </StackPanel>

                        <!-- Error Message -->
                        <Border Classes="error-message" 
                                IsVisible="{Binding HasError}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="⚠️" FontSize="16"/>
                                <TextBlock Text="{Binding ErrorMessage}" 
                                           Foreground="#DC2626"
                                           FontWeight="Medium"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <!-- Login Button -->
                        <Button Classes="login-btn"
                                Command="{Binding LoginCommand}"
                                IsEnabled="{Binding CanLogin}"
                                HorizontalAlignment="Stretch"
                                Margin="0,8,0,0">
                            <TextBlock Text="{Binding LoginButtonText}" 
                                       FontSize="18"
                                       FontWeight="Bold"/>
                        </Button>

                        <!-- Sign up link -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Spacing="4"
                                    Margin="0,12,0,0">
                            <TextBlock Text="Don't have an account ?" 
                                       FontSize="13"
                                       Foreground="White"
                                       Opacity="0.8"/>
                            <TextBlock Text="Sing up" 
                                       FontSize="13"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       TextDecorations="Underline"
                                       Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Panel>
</Window>
